@model itsmartplus.Models.type
@{
    ViewData["Title"] = "TypeAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Type</h1>
<br />
<br />
<form asp-action="TypeAdd" asp-controller="Type" method="post">
    <div class="container">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form form-group">
            <div class="col-md-3">ID</div>
            <div class="col-md-3">
                <input type="text" asp-for="t_id"  placeholder="Type ID" class="form-control" />
                <span asp-validation-for="t_id" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">Name type</div>
            <div class="col-md-3">
                <input type="text" asp-for="t_name" placeholder="Name type" class="form-control" />
                <span asp-validation-for="t_name" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2"><a asp-action="TypeIndex" asp-controller="Type" class="btn btn-light"><< Back</a></div>
            <div class="col-md-2"><input type="submit" value="Save" class="btn btn-success" /></div>
        </div>
    </div>

</form>

