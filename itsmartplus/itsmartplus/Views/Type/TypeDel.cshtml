@model itsmartplus.Models.type
@{
    ViewData["Title"] = "TypeEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete type confirm.</h1>
<form method="post" asp-action="TypeDel" asp-controller="Type">
    <input type="hidden" asp-for="t_id" value="@Model.t_id" />
    <div class="container">
        <div class="form-group">
            <div class="col-md-3">ID</div>
            <div class="col-md-3"><input type="text" disabled class="form-control" asp-for="t_id" value="@Model.t_id" /></div>
        </div>
        <div class="form-group">
            <div class="col-md-3">Type name</div>
            <div class="col-md-3"><input type="text" class="form-control" asp-for="t_name" value="@Model.t_name" /></div>
        </div>
        <div class="row">
            <div class="col-md-2"><a asp-action="TypeIndex" asp-controller="Type" class="btn btn-secondary"><< Back</a></div>
            <div class="col-md-2"><input type="submit" value="Delete" class="btn btn-danger" /></div>
        </div>
    </div>
</form>