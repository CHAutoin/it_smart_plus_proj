@model IEnumerable<itsmartplus.Models.category>
@{ 
    Layout = null;

}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Page Title</title>
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/css/materialize.min.css">
    <link rel="stylesheet" type="text/css" media="screen" href="~/lib/css/main.css">
</head>
<body>

    <nav class="head red darken-4">
        <div class="nav-wrapper red accent-3 side">
            <a href="#" data-target="home" class="sidenav-trigger"><i class="material-icons">menu</i></a>
            <a class='dropdown-trigger right' href='#' data-target='more'><i class="material-icons">more_vert</i></a>
        </div>
    </nav>
    <!-- Dropdown Structure -->
    <ul id='more' class='dropdown-content'>
        <li><a href="#!" class="grey-text"><i class="material-icons">exit_to_app</i>logut</a></li>
    </ul>
    <nav>
        <div class="nav-wrapper">
            <div class="col s12">
                <a href="#!" class="breadcrumb" id="Home_p" onclick="link(this.id);">Home</a>
                <a href="#!" class="breadcrumb" id="PM_p" onclick="link(this.id);">PM</a>
                <a href="#!" class="breadcrumb" id="brand_printers" onclick="link(this.id);">Brands</a>
                <a href="#!" class="breadcrumb" id="brandx">Epson</a>
            </div>
        </div>
    </nav>
    <!-- Start container -->

    <div class="container">

        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Model</th>
                    <th>Caretaker</th>
                    <th>Detail</th>
                    
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.cat_id</td>
                    <td>@item.cat_models</td>
                    <td>@item.em_id : @item.Employee.em_name</td>
                    <td><a asp-action="printer_detail" asp-controller="pm"  asp-route-prid="@item.cat_id" asp-route-type="@item.Type.t_name" asp-route-pr="@item.Brand.br_name.ToLower()">Detail</a> </td>
                </tr>
                }
                @*<tr>
                    <td>Alvin</td>
                    <td>Eclair</td>
                    <td>Alvin</td>
                    <td>Eclair</td>
                    <td>$0.87</td>
                </tr>*@
               
            </tbody>
        </table>

    </div>
    <!-- End container -->

    <footer class="page-footer">
        <div class="container">
            <div class="row">
                <div class="col l6 s12">
                    <h5 class="white-text">Developer by IT CH.</h5>
                    <p class="grey-text text-lighten-4">You can use selected, PM, BM, MTTR, MTBF</p>
                </div>
            </div>
        </div>
        <div class="footer-copyright">
            <div class="container">
                © 2019 Copyright CH auto industry
                <a class="grey-text text-lighten-4 right" href="#!">More Links</a>
            </div>
        </div>
    </footer>
    <script src="~/lib/js/materialize.min.js"></script>
    <script src="~/lib/js/main.js"></script>
    <script>
        window.onload = () => {
            let changx = window.location.search;
            let brandx = document.getElementById('brandx');
            brandx.innerHTML = changx.slice(4, 20).toUpperCase();
        };
    </script>
</body>
</html>