    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Page Title</title>
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="~/lib//css/materialize.min.css">
    <link rel="stylesheet" type="text/css" media="screen" href="~/lib/css/main.css">
</head>
<body>

    <nav class="head red darken-4">
        <div class="nav-wrapper red accent-3 side">
            <a href="#" data-target="home" class="sidenav-trigger"><i class="material-icons">menu</i></a>
            <a class='dropdown-trigger right' href='#' data-target='more'><i class="material-icons">more_vert</i></a>
        </div>
    </nav>
    <!-- Dropdown Structure -->
    <ul id='more' class='dropdown-content'>
        <li><a href="#!" class="grey-text"><i class="material-icons">exit_to_app</i>logut</a></li>
    </ul>
    <nav>
        <div class="nav-wrapper">
            <div class="col s12">
                <a href="#!" class="breadcrumb" id="Home" onclick="link(this.id);">Home</a>
                <a href="#!" class="breadcrumb" id="PM" onclick="link(this.id);">./</a>
