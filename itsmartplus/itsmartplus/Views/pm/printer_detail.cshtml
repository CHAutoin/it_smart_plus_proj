        */
    </style>

    <!-- Start container -->
    <div class="container">

        <table>
            <tr>
                <td>
                    <img src="~/images/printers.png" alt="printer" width="120">
                </td>
                <td>
                    <div class="row">
                        <br>
                        <div class="col s12">
                            <strong>ID : </strong><span>@Model.category.cat_id</span>
                        </div>
                        <br>
                        <div class="col s12">
                            <strong>Caretaker : @Model.category.em_id : @Model.category.Employee.em_name</strong>
                        </div>

                        <br>

                        <div class="col">
                            <label>
                                <input type="checkbox" checked />
                                <span>Y</span>
                            </label>
                        </div>

                        <div class="col">
                            <label>
                                <input type="checkbox" disabled="disabled" />
                                <span>N</span>
                            </label>
                        </div>
                    </div>
                </td>
                <td>
                    <a class="btn waves waves-effect" asp-action="printer_pm" asp-controller="pm" asp-route-prid="@Model.category.cat_id" asp-route-prtype="@Model.category.Type.t_name">PM</a>
                    @*<button id="PM_this" class="btn waves waves-effect" onclick="link(this.id);">PM</button>*@
                </td>
            </tr>
        </table>
        <!-- Table -->
        <table>
            <thead>
                <tr>
                    <th>รหัสการซ่อม</th>
                    <th>วันที่ซ่อม</th>
                    <th>ราคา</th>
                    <th>ร้านที่ส่งซ่อม</th>
                    <th>รายละเอียด</th>
                </tr>
            </thead>

            <tbody>
                <tr>
                    <td>fx-0001</td>
                    <td>19/3/2561</td> 
                    <td>1500</td>
                    <td>บจก.สยามไมโครซอฟต์</td>
                    <td>เปลี่ยนลูกยาง</td>
                </tr>
                <tr>
                    <td>fx-0002</td>
                    <td>5/2/2561</td>
                    <td>685</td>
                    <td>บจก.สยามไมโครซอฟต์</td>
                    <td>เปลี่ยนซับหมึก</td>
                </tr>
            </tbody>
        </table>
    </div>
    <!-- end to delete-->
    <footer class="page-footer">
        <div class="container">
            <div class="row">
                <div class="col l6 s12">
                    <h5 class="white-text">Developer by IT CH.</h5>
                    <p class="grey-text text-lighten-4">You can use selected, PM, BM, MTTR, MTBF</p>
                </div>
            </div>
        </div>
        <div class="footer-copyright">
            <div class="container">
                © 2019 Copyright CH auto industry
                <a class="grey-text text-lighten-4 right" href="#!">More Links</a>
            </div>
        </div>
    </footer>
    <!-- End container -->
    <script src="~/lib/js/materialize.min.js"></script>
    <script src="~/lib/js/main.js"></script>
    <script>
        const host = window.location.host;
        const protocol = window.location.protocol;
        function getUrlVars() {
            var vars = {};
            var parts = window.location.href.replace(/[?&]+([^=&]+)=([^&]*)/gi, function (m, key, value) {
                vars[key] = value;
            });
            //return vars;
            //window.location.href =
            let x = `${protocol}//${host}/pm/SelectListprinterbybrand?pr=${vars.pr}`;
            window.location.href = x;
            //document.getElementById('brandx').innerHTML = vars.pr.toUpperCase();
        }
    </script>
</body>
</html>