@model itsmartplus.Models.category

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/bootstrapSelect/css/bootstrap-select.css" rel="stylesheet" />
<h1>Edit</h1>

<h4>category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="cat_id" />
            <div class="form-group">
                ID
                <input type="text" value="@Model.cat_id" disabled class="form-control" />

            </div>
            <div class="form-group">
                Brand
                <select asp-for="br_id" asp-items="Model.BrandSelectList" class="form-control selectpicker" data-live-search="true"><option value="@Model.br_id"></option></select>
                <span asp-validation-for="br_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                Model
                <input asp-for="cat_models" class="form-control" />
                <span asp-validation-for="cat_models" class="text-danger"></span>
            </div>
            <div class="form-group">
                S/N
                <input asp-for="SerialNumber" class="form-control" />
            </div>
            <div class="form-group">
                Type
                <select asp-for="t_id" class="form-control selectpicker" data-live-search="true" asp-items="Model.TypeSelectList"><option value="@Model.t_id"></option></select>
                <span asp-validation-for="t_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                Caretaker
                <select asp-for="em_id" class="form-control selectpicker" data-live-search="true" asp-items="Model.EmSelectList"></select>
                <span asp-validation-for="em_id" class="text-danger"></span>
            </div>
            @*<div class="form-group">
            Operator
            <input type="text" value="@Model.ad_id" disabled class="form-control" />
        </div>*@
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/bootstrapSelect/js/bootstrap-select.js" type="text/javascript"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
